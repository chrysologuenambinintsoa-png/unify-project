{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "unify",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "cross-env EXPERIMENTAL_TURBOPACK=false prisma generate && next build",
    "type-check": "tsc --noEmit",
    "start": "next start",
    "start:server": "node server.js",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "postinstall": "prisma generate",
    "ws-server": "tsx scripts/ws-server.ts",
    "dev:all": "concurrently \"next dev\" \"npm:ws-server\"",
    "db:clean": "tsx prisma/clean.ts",
    "db:clean:production": "tsx prisma/cleanup-production.ts",
    "db:verify": "tsx prisma/verify-cleanup.ts",
    "db:seed": "tsx prisma/seed.ts || echo \"No seed script found\"",
    "db:push": "prisma db push",
    "generate:favicon": "node scripts/generate-favicon.js",
    "security-check": "npm audit --audit-level=moderate",
    "check-secrets": "git log -p | grep -i 'password\\|secret\\|api.key' | head || true",
    "skeleton:analyze": "node scripts/analyze-skeleton-coverage.js",
    "skeleton:apply": "node scripts/apply-skeleton-fix.js",
    "skeleton:smart": "node scripts/smart-skeleton-fixer.js",
    "skeleton:report": "node scripts/smart-skeleton-fixer.js && cat skeleton-coverage-report.json | jq ."
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@stripe/react-stripe-js": "^5.6.0",
    "@stripe/stripe-js": "^8.8.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "cloudinary": "^2.9.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "emoji-picker-react": "^4.12.0",
    "framer-motion": "^11.11.17",
    "helmet": "^7.1.0",
    "image-size": "^1.0.1",
    "isomorphic-dompurify": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.462.0",
    "mediasoup": "^3.19.3",
    "mediasoup-client": "^3.18.6",
    "next": "^16.1.6",
    "next-auth": "^4.24.11",
    "nodemailer": "^7.0.13",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "stripe": "^20.3.1",
    "tailwind-merge": "^3.5.0",
    "ws": "^8.13.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@prisma/client": "^6.19.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.19.10",
    "@types/nodemailer": "^7.0.9",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/yargs": "^17.0.35",
    "@types/yargs-parser": "^21.0.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.49",
    "prisma": "^6.19.2",
    "sharp": "^0.32.6",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3"
  }
}
