{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "../*"
      ],
      "@/lib/*": [
        "../lib/*"
      ],
      "@/app/*": [
        "../app/*"
      ],
      "@/components/*": [
        "../components/*"
      ],
      "@/contexts/*": [
        "../contexts/*"
      ],
      "@/hooks/*": [
        "../hooks/*"
      ],
      "@/types/*": [
        "../types/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
