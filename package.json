{
  "name": "unify",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "postinstall": "prisma generate",
    "ws-server": "tsx scripts/ws-server.ts",
    "db:clean": "tsx prisma/clean.ts",
    "db:seed": "tsx prisma/seed.ts || echo \"No seed script found\"",
    "db:push": "prisma db push",
    "security-check": "npm audit --audit-level=moderate",
    "check-secrets": "git log -p | grep -i 'password\\|secret\\|api.key' | head || true"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "cloudinary": "^2.9.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "emoji-picker-react": "^4.12.0",
    "framer-motion": "^11.11.17",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.462.0",
    "next": "^16.1.6",
    "next-auth": "^4.24.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.4",
    "ws": "^8.13.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@prisma/client": "^5.22.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.9.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.49",
    "prisma": "^5.22.0",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3"
  }
}
